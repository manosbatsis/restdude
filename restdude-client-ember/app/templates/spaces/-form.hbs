 {{#paper-form onSubmit=(route-action "save" ) as |form|}}
  <div>
    <label>
      {{form.input id="name" label=" Name" type="text" value=model.name onChange=(action (mut model.name)) required=true}}
    </label>
  </div>
  <div>
    <label>
       {{form.input id="title" label=" Title" type="text" value=model.title onChange=(action (mut model.title)) required=true}}
    </label>
  </div>
  <div>
    <label>
        {{paper-input textarea=true id="description" label=" Description" type="text" value=model.description onChange=(action (mut model.description)) required=true}}

    </label>
  </div>
  <div>
    <label>
      {{form.input id="avatarurl" label=" Avatarurl" type="text" value=model.avatarUrl onChange=(action (mut model.avatarUrl)) required=true}}
    </label>
  </div>
  <div>
    <label>
       {{form.input id="bannerurl" label=" Bannerurl" type="text" value=model.bannerUrl onChange=(action (mut model.bannerUrl)) required=true}}
    </label>
  </div>

  <div>
    {{#paper-select
      disabled=disableSelect
      label="Visibility"
      options=(options 'SECRET' 'CLOSED' 'OPEN' 'PUBLIC')
      value=model.visibility
      onChange=(action (mut model.visibility))
      as |option|}}
      {{option}}
    {{/paper-select}}


  </div>
  <div>
     {{#form.submit-button type="submit" raised=true id='save-btn' value="Save" primary=true}}Save{{/form.submit-button}}
  </div>
{{/paper-form}}
