

{{#if model.length}}

  {{#paper-list}}
    {{#each model as |contextMembership|}}
      {{#paper-item class="md-3-line" as |controls| }}
        {{#if contextMembership.user.avatarUrl}}
          <img src={{contextMembership.user.avatarUrl}} alt={{contextMembership.user.name}} class="md-avatar">
        {{else}}
          {{ember-initials class="md-avatar"
              size=50
              name=contextMembership.user.name
              seedText=contextMembership.user.name
              defaultName=contextMembership.user.name
              textColor="white"
              fontSize=55
              fontWeight=100
              fontFamily="Helvetica Neue Light, Arial, sans-serif"
          }}
        {{/if}}
        <div class="md-list-item-text">
          <h4>{{contextMembership.user.name}}</h4>
          <p>{{contextMembership.user.username}}  {{#if contextMembership.admin}}admin{{/if}} </p>
        </div>
        {{paper-icon "settings"}}
      {{/paper-item}}
    {{/each}}
  {{/paper-list}}

{{else}}

  <p id="blankslate">
    No Members found {{link-to "Add" "contextMembership" }}
  </p>

{{/if}}

