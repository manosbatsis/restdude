

{{#if model.length}}

  {{#paper-list}}
    {{#each model as |contextMembershipRequest|}}
      {{#paper-item class="md-3-line" as |controls| }}
        {{#if contextMembershipRequest.user.avatarUrl}}
          <img src={{contextMembershipRequest.user.avatarUrl}} alt={{contextMembershipRequest.user.name}} class="md-avatar">
        {{else}}
          {{ember-initials class="md-avatar"
              size=50
              name=contextMembershipRequest.user.name
              seedText=contextMembershipRequest.user.name
              defaultName='?'
              textColor="white"
              fontSize=55
              fontWeight=100
              fontFamily="Helvetica Neue Light, Arial, sans-serif"
          }}
        {{/if}}
        <div class="md-list-item-text">
          <h4>{{contextMembershipRequest.status}}</h4>
          <h4>{{contextMembershipRequest.user.name}}</h4>
          <p>{{contextMembershipRequest.user.username}}  {{#if contextMembershipRequest.admin}}admin{{/if}} </p>
        </div>
        {{paper-icon "settings"}}
      {{/paper-item}}
    {{/each}}
  {{/paper-list}}

{{else}}

  <p id="blankslate">
    No Members found {{link-to "Add" "contextMembershipRequest" }}
  </p>

{{/if}}
