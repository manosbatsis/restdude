{{signup-form user=model}}
{{login-js-inject}}






        <div class="container">
            <div class="row">
                <div class="col-md-5 m-x-auto pull-xs-none vamiddle">
                    <div class="card">
                        <div class="card-block p-a-2">
                            <h1>Register</h1>
                            <form {{action 'save' model on="submit"}}>
                            <p class="text-muted">Create your account</p>
                            <div class="input-group m-b-1">
                                <span class="input-group-addon"><i class="icon-user"></i></span>

                                 {{input value=username type="text" class="form-control" placeholder="Username"}}
                            </div>
                            <div class="input-group m-b-1">
                                <span class="input-group-addon">@<i></i>
                                </span>

                                {{ input value=email type="text" class="form-control" type="email" class="form-control" placeholder="Email"}}
                            </div>
                            <div class="input-group m-b-1">
                                <span class="input-group-addon"><i class="icon-lock"></i></span>
                                {{ input value=password type="password" class="form-control" placeholder="Password"}}
                            </div>
                            <div class="input-group m-b-2">
                                <span class="input-group-addon"><i class="icon-lock"></i></span>
                                {{input value=passwordConfirmation type="password" class="form-control" placeholder="Repeat password"}}

                            </div>
                             <button id='register-btn' {{action "save" model}} type="submit" class="btn btn-block btn-success">Create Account</button>
                          </form>
                        </div>
                         {{#if errorMessage}}
                           {{errorMessage}}
                        {{/if}}
                        <div class="card-footer p-a-2">
                            <div class="row">
                                <div class="col-xs-6">
                                    <button class="btn btn-block btn-facebook" type="button">
                                        <span>facebook</span>
                                    </button>
                                </div>
                                <div class="col-xs-6">
                                    <button class="btn btn-block btn-twitter" type="button">
                                        <span>twitter</span>
                                    </button>
                                </div>
                                <div class="col-xs-6">
                                     {{#link-to 'login'}}
                                    <button class="btn btn-primary active m-t-1" type="button">
                                        <span>Login</span>
                                    </button>
                                    {{/link-to}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- {{signup-form user=model triggerSave=(action "save") errorMessage=errorMessage}}-->
