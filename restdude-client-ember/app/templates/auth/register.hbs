{{signup-form user=model}}
{{login-js-inject}}

        <div class="container">
            <div class="row">
                <div class="col-md-5 m-x-auto pull-xs-none vamiddle">
                    <div class="card">
                        <div class="card-block p-a-2">
                            <h1>Register</h1>
                          <!--  <form {{action 'save' model on="submit"}}> -->
                              {{#paper-form onSubmit=(action "save" model) as |form|}}
                            <p class="text-muted">Create your account</p>
                            <div class="input-group m-b-1">
                                <span class="input-group-addon"><i class="icon-user"></i></span>


                                 {{form.input label="Username" value=username onChange=(action (mut Username)) required=true}}
                            </div>
                            <div class="input-group m-b-1">
                                <span class="input-group-addon">@<i></i>
                                </span>


                                 {{form.input label="Email" type="email" value=email onChange=(action (mut Email)) required=true}}
                            </div>
                            <div class="input-group m-b-1">
                                <span class="input-group-addon"><i class="icon-lock"></i></span>

                                 {{form.input label="Password"  type='password' onChange=(action (mut passWord)) required=true}}
                            </div>
                            <div class="input-group m-b-2">
                                <span class="input-group-addon"><i class="icon-lock"></i></span>

                                {{form.input label="Repeat password"  value=passwordConfirmation type="password" onChange=(action (mut passWord)) required=true}}

                            </div>
                            <div class="layout-row">
                          {{#form.submit-button raised=true id='register-btn'onSubmit=(action "save" model) primary=true}}Create Account{{/form.submit-button}}
                           </div>

                           <br>
                        <!--  </form>-->
                          {{/paper-form}}
                        </div>
                         {{#if errorMessage}}
                           {{errorMessage}}
                        {{/if}}
                        <div class="card-footer p-a-2">


                                    {{#paper-button raised=true action="targetButton" target=component}}Facebook{{/paper-button}}


                                    {{#paper-button raised=true action="targetButton" target=component}}Twitter{{/paper-button}}


                                     {{#link-to 'auth.login'}}
                                      {{#paper-button raised=true action="targetButton" target=component}}Login{{/paper-button}}
                                    {{/link-to}}


                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- {{signup-form user=model triggerSave=(action "save") errorMessage=errorMessage}}-->
