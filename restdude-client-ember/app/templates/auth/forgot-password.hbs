    
<div class="container">
	<div class="row">
	
        <div class="col-md-6 col-md-offset-3">
  <h4 style="border-bottom: 1px solid #c5c5c5;">
    <i class="glyphicon glyphicon-user">
    </i>
    Account Access
  </h4>
   {{#paper-form onSubmit=(action "continue") as |form|}}
  <div style="display:;" id="form-olvidado">
    <br>
    <h4 class="">
      Forgot your password?
    </h4>
    
     
        <span class="help-block">
          We'll send you an email with instructions to choose a new password.
        </span>
        <div class="form-group input-group">
          <span class="input-group-addon">
            @
          </span>
          
           {{form.input id="email" placeholder="Email" value=email type="email" onChange=(action (mut email)) required=true}}
        </div>
          {{#form.submit-button type="submit" raised=true id='continue-btn' primary=true}}Send Password Reset{{/form.submit-button}}
        <p class="help-block">
             {{#link-to 'auth.login'}}
          <a class="text-muted" href="#" id="acceso"><small>Account Login</small></a>
             {{/link-to}}
        </p>
     
   
  </div>
    {{/paper-form}}
</div>
	</div>
</div>
