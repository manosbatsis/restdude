                   {{paper-icon "icon-briefcase"}}
                   About
         {{/link-to}}
       {{/paper-item}}
     {{#paper-item }}
         {{#link-to 'contact' }}
                   {{paper-icon "icon-briefcase"}}
                   Contact
         {{/link-to}}
       {{/paper-item}}
       {{#paper-item }}
	{{#link-to 'user'}}
	{{#if sessionAccount.account}}
         {{paper-icon "icon-briefcase"}}
         {{sessionAccount.account.username}}
        {{/if}}
       {{/link-to}}
       {{/paper-item }}
     {{/paper-list}}



