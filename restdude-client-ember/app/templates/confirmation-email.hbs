    <div class="container">
	<div class="row">
	
        <div class="col-md-6 col-md-offset-3">
  <h4 style="border-bottom: 1px solid #c5c5c5;">
    <i class="glyphicon glyphicon-user">
    </i>
    Email Confirmation Code
  </h4>
  
  <div style="display:;" id="form-olvidado">
    <form accept-charset="UTF-8" role="form" id="login-recordar" method="post">
      <fieldset>
        <span class="help-block">
          Check your email for confirmation code and enter the code below
        </span>
        <div class="form-group input-group">
          <span class="input-group-addon"><i class="icon-lock"></i></span>
	  {{input id="resetPasswordToken" class="form-control" value=resetPasswordToken type="code" placeholder="Email Confirmation Code" required=""}}
        </div>
        <div class="form-group input-group">
          <span class="input-group-addon">
            @
          </span>
         {{input id="email" class="form-control" placeholder="Email" value=email type="email" required=""}}
        </div>
        <button type="submit" {{action "continue" model}}  class="btn btn-primary btn-block" id="btn-olvidado">
          Continue
        </button>
      </fieldset>
    </form>
  </div>
</div>
	</div>
</div>
